{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "moduels": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [ "react" ],
    "rules": {
        "constructor-super": 2,
        "curly": ["error", "multi-line"],
        "default-case": "error",
        "eol-last": ["error", "always"],
        "eqeqeq": 2,
        "max-nested-callbacks": ["error", 3],
        "no-cond-assign": 2,
        "no-console": 2,
        "no-const-assign": 2,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-irregular-whitespace": 2,
        "no-multiple-empty-lines": 2,
        "no-unreachable": 2,
        "no-unsafe-negation":2,
        "no-undef": 2,
        "no-undef-init": 2,
        "no-useless-constructor": 2,
        "no-var": 2,
        "object-curly-spacing": ["error", "always"],
        "prefer-const": 2,
        "quotes": [ "error", "single" ],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "semi": [ "error", "always" ],
        "space-before-blocks": 2,
        "space-infix-ops": 2,
        "spaced-comment": 2
    },
    "globals": {
        "__DEV__": true,
        "test": true,
        "expect": true
    }
}